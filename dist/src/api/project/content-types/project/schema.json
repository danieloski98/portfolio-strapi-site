{
    "kind": "collectionType",
    "collectionName": "projects",
    "info": {
        "singularName": "project",
        "pluralName": "projects",
        "displayName": "Project",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "technologies": {
            "type": "json",
            "required": true
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images",
                "files"
            ]
        },
        "githubUrl": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "default": "WEB",
            "required": true
        },
        "playstoreUrl": {
            "type": "string"
        },
        "appstoreUrl": {
            "type": "string"
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "webLink": {
            "type": "string"
        },
        "shortDescription": {
            "type": "text",
            "required": true
        },
        "description": {
            "type": "richtext",
            "required": true
        }
    }
}
